rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // User document and all subcollections - only authenticated user can access their own data
    match /users/{userId} {
      // Allow read/write access only to authenticated users accessing their own data
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Tasks subcollection - task templates
      match /tasks/{taskId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // Task instances subcollection - daily task status
      match /task_instances/{instanceId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // Daily schedules subcollection - sleep/wake time overrides
      match /daily_schedules/{date} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}